            android:layout_height="match_parent">

        <view android:layout_width="match_parent" android:layout_height="match_parent" class="com.puntogris.purpur.Game"
              android:id="@+id/gameView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>